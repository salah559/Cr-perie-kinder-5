
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Categories: Read by all, Write by all (for server initialization and owner management)
    match /categories/{category} {
      allow read: if true;
      allow write: if true;
    }
    
    // Menu Items: Read by all, Write by all (for server and owner management)
    match /menuItems/{menuItem} {
      allow read: if true;
      allow write: if true;
    }
    
    // Orders: Create by anyone (guest checkout), Read/Update/Delete requires authentication
    match /orders/{orderId} {
      allow create: if true;
      allow read: if true;
      allow update: if true;
      allow delete: if true;
    }
    
    // Reservations: Create by anyone, Read/Update/Delete requires authentication
    match /reservations/{reservationId} {
      allow create: if true;
      allow read: if true;
      allow update: if true;
      allow delete: if true;
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
